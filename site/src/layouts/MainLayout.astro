---
import '../styles/global.css';
const { title = 'ForecastingAPI.com' } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body class="bg-slate-950 text-slate-100 min-h-screen">
    <main class="max-w-5xl mx-auto px-3 py-6 md:px-6 md:py-10">
      <slot />
    </main>
  </body>
</html>
